%% -*- erlang -*-

{erl_opts, [{parse_transform, lager_transform}]}.

{deps, [
    {lager, "3.2.1"},
    {equery, "0.9.1"},
    {epgpool, "1.1.0"},
    {zlist, "1.0.3"},
    {jiffy, "0.14.7"}
]}.

%% Building C bindings
{overrides, [
    {override, jiffy, [
        {plugins, [pc]},
        {artifacts, ["priv/jiffy.so"]},
        {provider_hooks, [
            {post, [
                {compile, {pc, compile}},
                {clean, {pc, clean}}
            ]}
        ]}
    ]}
]}.

{profiles, [
    {test, [
        {deps, [
            {epgpool_cth, {git, "https://github.com/egobrain/epgpool_cth.git", {tag, "1.0.0"}}},
            {dbschema, "0.2.2"}
        ]}
    ]}
]}.

{ct_opts, [
    {ct_hooks, [repo_cth]}
]}.

{xref_checks, [undefined_function_calls]}.
